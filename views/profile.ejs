<% include ./partials/header.ejs %>

<div class="profile w-full min-h-screen bg-white pt-1">
    <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
    </form>
    <div class="profdets flex flex-col items-center mt-[5rem] ">
        <div class="relative">
            <span id="uploadicon" class="w-[30px] h-[30px] cursor-pointer absolute bottom-10 right-0 rounded-full flex items-center justify-center bg-zinc-100"><i class="ri-pencil-fill"></i></span>
            <div class="w-[8rem] h-[8rem] bg-zinc-800 rounded-full mb-5 overflow-hidden">
                <img class="w-full h-full object-cover object-top" src="/images/uploads/<%= user.profileImage %>" alt="">
            </div>
        </div>
        <h1 class="text-3xl  text-black mb-1"><%= user.name %> </h1>
        <h3 class="text-md mb-1">@<%= user.username %></h3>
        <h3 class="text-md mb-5">0 following</h3>

        <a href="/edit" class="px-7 text-sm  font-semibold  py-2 bg-zinc-100 rounded-full mb-5">Edit</a>
        <a href="/add" class="px-5 py-2 rounded-lg bg-red-600 text-white text-xs font-semibold">Add New Post</a>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 rounded-md bg-zinc-800 overflow-hidden">
                <img class="w-full h-full object-cover" src="https://i.pinimg.com/564x/6d/50/9d/6d509d329b23502e4f4579cbad5f3d7f.jpg" alt="">
            </div>
            <h3 class="text-xl font-[600] mt-3 ">All pins</h3>
            <h5 class="text-xs opacity-60">28 pins</h5>
        </div>
        <div class="card">
            <% if (user.posts && user.posts.length > 0) { %>
                <div class="w-52 h-40 rounded-md bg-zinc-800 overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="inline-block text-xl font-[600] mt-3 ">My Uploads pins</a>
                <h5 class="text-xs opacity-60"><%= user.posts.length %> pins</h5>
            <% } else { %>
                <!-- Handle the case when user.posts is empty or undefined -->
                <p class="mt-[4rem]">No uploads available</p>
            <% } %>
        </div>
        
    </div>

</div>


<script>
    document.querySelector("#uploadicon").addEventListener("click", function(){
        document.querySelector("#uploadform input").click()

    })

    document.querySelector("#uploadform input").addEventListener("change", function(){
        document.querySelector("#uploadform").submit();
    })

</script>


<% include ./partials/footer.ejs %>
