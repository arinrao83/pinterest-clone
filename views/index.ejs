<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-center bg-cover  bg-[url('https://images.unsplash.com/photo-1559854034-927055a85426?q=80&w=2896&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] flex items-center justify-center" >
  <div class="w-[27vw]  bg-zinc-100 rounded-[45px] px-[4rem] py-10">
    <h1 class="text-2xl  text-center font-semibold text-zinc-700 leading-none tracking-tight capitalize">Welcome to Pinterest</h1>
  
    <% if(error.length > 0){ %>
    <p class=" text-md text-red-700 "> <%= error %></p>


  <% } %>
    <form action="/login" method="post">
      <input class=" border-2 rounded-md  block mt-4  w-full px-3 py-2" name="username"  type="text" placeholder="username">
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-2" name="password" type="password" placeholder="password">

      <a class="mt-3 ml-1 inline-block font-semibold text-zinc-500" href="#">Forget your password?</a>
      <input class="border-2 rounded-md block mt-4 w-full px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer"  type="submit" value="Login">
      <p class="text-xs font-semibold text-zinc-700 mt-7 text-center w-3/2 mx-auto">By continuing, you agree to Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy; Opens a new tab. Notice at collection;</p>
      <a class="inline-block mt-6 text-[14px] text-zinc-700 text-center w-full font-semibold " href="/register">Dont have an account?</a>
    </form>
  </div>  
</div>
  
<% include ./partials/footer.ejs %>
